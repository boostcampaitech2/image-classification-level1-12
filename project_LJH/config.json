{
    "name": "Mask_VIT",
    "n_gpu": 1,

    "arch": {
        "type": "MaskModel",
        "args": {}
    },
    "data_loader": {
        "type": "MaskDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "F1_loss",
    "metrics": [
        "accuracy", "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/opt/ml/repos/project_LJH/saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "argumentation": {
        "apply": "True"
    }
}
