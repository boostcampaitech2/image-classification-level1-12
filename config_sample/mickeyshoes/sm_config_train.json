{
    "name": "team_baseline",
    "n_gpu": 1,

    "train_model": {
        "type": "MickeyMaskModel",
        "args": {
            "num_classes": 18,
            "version_number": 18
        }
    },
    "training_dataset": {
        "type": "MaskTrainDataset",
        "args":{
            "root": "/opt/ml/data/train/images",
            "csv_path": "/opt/ml/data/train/train_dt.csv",
            "num_folds": 3,
            "set_num": 0,
            "stratified": true,
            "person_shuffle": true,
            "kfold_random_state": 74,
            "training": true
        }
    },
    "valid_dataset": {
        "type": "MaskTrainDataset",
        "args":{
            "root": "/opt/ml/data/train/images",
            "csv_path": "/opt/ml/data/train/train_dt.csv",
            "num_folds": 3,
            "set_num": 0,
            "stratified": true,
            "person_shuffle": true,
            "kfold_random_state": 74,
            "training": false
        }
    },
    "training_transform": "mickeyshoes_training_transform",
    "valid_transform": "mickeyshoes_valid_transform",
    "train_target_transform": "mickeyshoes_train_target_transform",
    "valid_target_transform": "mickeyshoes_train_target_transform",
    "training_data_loader": {
        "batch_size": 128,
        "num_workers": 1,
        "shuffle": true
    },
    "valid_data_loader": {
        "batch_size": 128,
        "num_workers": 1,
        "shuffle": true
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "focal_loss",
    "metrics": [
        "accuracy", "f1"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 10,
            "eta_min": 0
        }
    },
    "trainer": {
        "epochs": 100,
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 3,

        "tensorboard": true
    },
    "save_dir": "saved/mickeyshoes/"
}
