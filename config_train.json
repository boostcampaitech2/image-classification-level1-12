{
    "name": "team_baseline",
    "n_gpu": 1,

    "train_model": {
        "type": "FineTuneResNet",
        "args": {
            "num_classes": 18
        }
    },
    "training_dataset": {
        "type": "MaskTrainDataset",
        "args":{
            "root": "/opt/ml/mask_data/train/images/",
            "csv_path": "/opt/ml/mask_data/train/train.csv",
            "num_folds": 5,
            "set_num": 0,
            "person_shuffle": true,
            "training": true
        }
    },
    "valid_dataset": {
        "type": "MaskTrainDataset",
        "args":{
            "root": "/opt/ml/mask_data/train/images/",
            "csv_path": "/opt/ml/mask_data/train/train.csv",
            "num_folds": 5,
            "set_num": 0,
            "person_shuffle": true,
            "training": false
        }
    },
    "training_transform": "baseline_training_transform",
    "valid_transform": "baseline_valid_transform",
    "train_target_transform": "baseline_train_target_transform",
    "valid_target_transform": "baseline_train_target_transform",
    "training_data_loader": {
        "batch_size": 48,
        "num_workers": 2,
        "shuffle": true
    },
    "valid_data_loader": {
        "batch_size": 48,
        "num_workers": 2,
        "shuffle": true
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy", "f1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "save_dir": "saved/"
}
